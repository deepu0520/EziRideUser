<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/text_color_white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:background="@color/text_color_white">

        <ImageView
            android:id="@+id/backArrow"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="10dp"
            android:padding="5dp"
            android:src="@drawable/back_icon" />

        <com.eziride.user.Utils.MyBoldTextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:text="@string/language"
            android:textColor="@color/text_red"
            android:textSize="18sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1sdp"
            android:background="@color/view_grey_bg"
            android:layout_alignParentBottom="true"
            />
    </RelativeLayout>




    <LinearLayout
        android:id="@+id/lnrEnglish"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/_5sdp"
        android:paddingTop="@dimen/_5sdp">

        <RadioButton
            android:id="@+id/radioEnglish"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <com.eziride.user.Utils.MyBoldTextView
            android:id="@+id/lblEnglish"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/_5sdp"
            android:text="@string/english"
            android:textAlignment="viewStart"
            android:textColor="@color/black_text_color"
            android:textSize="@dimen/_12sdp"
            android:visibility="visible" />


    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/_1sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:background="@color/view_grey_bg" />

    <LinearLayout
        android:id="@+id/lnrJapanese"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/_5sdp"
        android:paddingTop="@dimen/_5sdp">

        <RadioButton
            android:id="@+id/radioJapanese"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


        <com.eziride.user.Utils.MyBoldTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/_5sdp"
            android:text="@string/japanese"
            android:textAlignment="viewStart"
            android:textColor="@color/black_text_color"
            android:textSize="@dimen/_12sdp"
            android:visibility="visible" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/_1sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:background="@color/view_grey_bg"
        android:gravity="bottom" />

    <LinearLayout
        android:id="@+id/lnrChinese"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/_5sdp"
        android:paddingTop="@dimen/_5sdp">

        <RadioButton
            android:id="@+id/radioChinese"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


        <com.eziride.user.Utils.MyBoldTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/_5sdp"
            android:text="@string/chinese"
            android:textAlignment="viewStart"
            android:textColor="@color/black_text_color"
            android:textSize="@dimen/_12sdp"
            android:visibility="visible" />

    </LinearLayout>


</LinearLayout>